---
import MainLayout from "../layouts/MainLayout.astro";
import Section1 from "../components/Section1.astro";
import Section2 from "../components/Section2.astro";
import Section3 from "../components/Section3.astro";
import Section4 from "../components/Section4.astro";
import Section5 from "../components/Section5.astro";
import Section6 from "../components/Section6.astro";
import Button from "../components/Button.astro";
import Form from "../components/Form.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
import Vand1 from "../assets/images/Vand1.png";
import Vand2 from "../assets/images/Vand2.png";
import Vand3 from "../assets/images/Vand3v.png";
---

<MainLayout title="Plastic Change">
  <article>
    <h1>#singleusesucks - hero unit</h1>
    <section class="grid grid-cols-5 grid-rows-5">
      <Image src={Vand1} alt="" class="w-full col-start-1 col-span-5 row-start-1 row-span-1 z-0" />
      <Image src={Vand2} alt="" class="w-full col-start-1 col-span-5 row-start-2 row-span-1 z-5" />
      <Image src={Vand3} alt="" class="w-full col-start-1 col-span-5 row-start-3 row-span-1 z-10" />
    </section>
    <Section1 />
    <Section2 />
    <Section3 />
    <Section4 />
    <Section5 />
    <Form />
    <Section6 />
    <p>billede av #singleusesucks logo</p>
    <p>
      Link til <Link href="https://www.kea.dk" target="_blank">En anden side</Link>
    </p>
    <Image src={thumbsup} alt="" />
  </article>
</MainLayout>
